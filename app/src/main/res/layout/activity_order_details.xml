<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Heading -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Orders"
        android:textSize="44sp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:textStyle="bold"/>

    <!-- Horizontal Scroll View -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal">

        <!-- Table Layout -->
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <!-- First Row -->
            <TableRow
                android:background="#000000">
                <TextView
                    android:text="Order ID"
                    android:padding="3dip"
                    android:textStyle="bold"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Product ID"
                    android:padding="3dip"
                    android:textStyle="bold"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Quantity"
                    android:padding="3dip"
                    android:textStyle="bold"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Address"
                    android:padding="3dip"
                    android:textStyle="bold"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Date"
                    android:padding="3dip"
                    android:textStyle="bold"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Price"
                    android:padding="3dip"
                    android:textStyle="bold"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Status"
                    android:padding="3dip"
                    android:textStyle="bold"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
            </TableRow>

            <!-- Second Row -->
            <TableRow
                android:background="#000000">
                <TextView
                    android:text="Item 8"
                    android:padding="3dip"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Item 9"
                    android:padding="3dip"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Item 10"
                    android:padding="3dip"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Item 11"
                    android:padding="3dip"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Item 12"
                    android:padding="3dip"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Item 13"
                    android:padding="3dip"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Item 14"
                    android:padding="3dip"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
            </TableRow>

            <!-- Third Row -->
            <TableRow
                android:background="#000000">
                <TextView
                    android:text="Item 15"
                    android:padding="3dip"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Item 16"
                    android:padding="3dip"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Item 17"
                    android:padding="3dip"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Item 18"
                    android:padding="3dip"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Item 19"
                    android:padding="3dip"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Item 20"
                    android:padding="3dip"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
                <TextView
                    android:text="Item 21"
                    android:padding="3dip"
                    android:background="#FFFFFF"
                    android:layout_margin="1dip"/>
            </TableRow>

        </TableLayout>

    </HorizontalScrollView>

</LinearLayout>
